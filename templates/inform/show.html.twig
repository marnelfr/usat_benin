<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title"><i class="fas fa-info-circle"></i> Communiqué</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
    </div>
    <div class="modal-body">
        <div class="col-12">
            <img width="100%" style="border: 1px solid #e1e1e1;" src="{{ asset(link) }}" alt="">
        </div>
        <table class="table table-responsive-sm">
            <tbody>
            {#<tr>#}
                {#<th>Id</th>#}
                {#<td>{{ inform.id }}</td>#}
            {#</tr>#}
            <tr>
                <th>Title</th>
                <td>{{ inform.title }}</td>
            </tr>
            <tr>
                <td colspan="2">{{ inform.content|raw }}</td>
            </tr>
            <tr>
                <th>Publié le</th>
                <td>{{ inform.createdAt ? inform.createdAt|date('d/m/Y à H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="modal-footer text-left">
        <button type="reset" class="btn btn-primary" data-dismiss="modal">Fermer</button>
    </div>
</div>