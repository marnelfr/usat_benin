{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
  <div class="col-12 col-sm-8 col-md-6 offset-sm-2 offset-md-3">
    <h1 class="text-center">Inscription</h1>
    {% for flashError in app.flashes('verify_email_error') %}
      <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
    {% if form_errors(registrationForm) %}
      <div class="alert alert-danger" role="alert">{{ form_errors(registrationForm) }}</div>
    {% endif %}

    <div id="register_first_page">
      {{ form_row(registrationForm.username) }}
      <div class="row">
        <div class="col-sm-6 mr-0 d-inline">
          {{ form_row(registrationForm.lastName) }}
        </div>
        <div class="col-sm-6 ml-0 d-inline">
          {{ form_row(registrationForm.name) }}
        </div>
      </div>

      {{ form_row(registrationForm.email) }}

      <div class="row">
        <div class="col-sm-6 d-inline">
          {{ form_row(registrationForm.phone) }}
        </div>
        <div class="col-sm-6 d-inline">
          {{ form_row(registrationForm.profil) }}
        </div>
      </div>

      {{ form_row(registrationForm.plainPassword) }}

      <div class="row">
        <div class="col-sm-12 d-inline text-right">
          <button id="register_next" class="btn btn-primary" type="button">
            Continuer <i class="fas fa-arrow-alt-circle-right"></i>
          </button>
        </div>
      </div>
    </div>

    <div id="register_last_page" style="display: none;">
      {{ form_row(registrationForm.address) }}
      {{ form_row(registrationForm.compagny) }}
      {{ form_row(registrationForm.ifu) }}
      {{ form_row(registrationForm.registerNum) }}
      {{ form_row(registrationForm.fleet) }}
      <div class="form-group">
        <div class="form-check">
          {{ form_widget(registrationForm.agreeTerms) }}
        </div>
      </div>


      <div class="row">
        <div class="col-sm-6 d-inline">
          <button id="register_prev" class="btn btn-primary" type="button">
            <i class="fas fa-arrow-alt-circle-left"></i> Retour
          </button>
        </div>
        <div class="col-sm-6 d-inline text-right">
          <button class="btn btn-success" type="submit">
            <i class="fas fa-plus-circle"></i> S'enregistrer
          </button>
          {#{{ form_row(registrationForm.save) }}#}
        </div>
      </div>
    </div>
    {{ form_end(registrationForm) }}
  </div>
  <div class="text-center mt-4 mb-5">
    <a href="{{ path('home_page') }}">Retourner Ã  l'accueil</a>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('register') }}
{% endblock %}