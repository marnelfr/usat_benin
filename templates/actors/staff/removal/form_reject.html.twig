<div class="modal-content">
  {{ form_start(form, {action: path('staff_reject_removal', {id: id}), method: 'POST'}) }}
  <div class="modal-header">
    <h4 class="modal-title"><i class="fas fa-edit"></i> Raison du rejet</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span></button>
  </div>
  <div class="modal-body">
    <div class="form-group">
      {{ form_widget(form.reason) }}
    </div>
  </div>
  <div class="modal-footer text-left">
    <button type="reset" class="btn btn-default float-left" data-dismiss="modal">Fermer</button>
    <button id="modal-removal-reject-saver" class="btn btn-danger float-right"><i class="fa fa-times"></i> Confirmer le rejet</button>
  </div>
  {{ form_end(form) }}
</div>