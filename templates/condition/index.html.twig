{% extends 'base.html.twig' %}

{% block title %}Condition index{% endblock %}

{% block body %}
    <h1>Condition index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for condition in conditions %}
            <tr>
                <td>{{ condition.id }}</td>
                <td>{{ condition.content }}</td>
                <td>{{ condition.createdAt ? condition.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('condition_show', {'id': condition.id}) }}">show</a>
                    <a href="{{ path('condition_edit', {'id': condition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('condition_new') }}">Create new</a>
{% endblock %}
