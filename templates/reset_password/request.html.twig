{% extends 'base.html.twig' %}

{% block title %}Reinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Reset your password</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Veuillez entrer votre adresse email. <br>
                Nous vous enverrons un lien de reinitialisation.
                {#Enter your email address and we we will send you a#}
                {#link to reset your password.#}
            </small>
        </div>

        <button class="btn btn-primary">Envoyez moi un mail</button>
    {{ form_end(requestForm) }}
{% endblock %}