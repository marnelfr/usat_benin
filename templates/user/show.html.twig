{% extends 'base-admin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block page_title %}Utilisateur {% endblock %}
{% block page_title2 %}Utilisateur {% endblock %}
{% block page_subtitle %}{{ user.fullname }}{% endblock %}

{% block page_content %}
  <div class="row pb-3">
    <div class="col-12 col-sm-12 col-md-12">
      <a class="btn btn-default" href="{{ path('user_index') }}"><i class="fas fa-reply"></i> Liste des Utilisateurs</a>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><i class="fas fa-eye"></i> Utilisateur</h3>
      {#<div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
          <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
      </div>#}
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-12 col-sm-8 col-md-6 offset-md-3 offset-sm-2">
          <table class="table">
            <tbody>
            <tr>
              <th>Identifiant</th>
              <td>{{ user.username }}</td>
            </tr>
            <tr>
              <th>Roles</th>
              <td>{{ user.profil.name }}</td>
              {#<td>{{ user.roles ? user.roles|json_encode : '' }}</td>#}
            </tr>
            <tr>
              <th>Prénom</th>
              <td>{{ user.name }}</td>
            </tr>
            <tr>
              <th>Nom</th>
              <td>{{ user.lastName }}</td>
            </tr>
            <tr>
              <th>N° Téléphone</th>
              <td>{{ user.phone }}</td>
            </tr>
            <tr>
              <th>E-mail</th>
              <td>{{ user.email }}</td>
            </tr>
            <tr>
              <th>Adresse</th>
              <td>{{ user.address }}</td>
            </tr>
            <tr>
              <th>Status</th>
              <td>{{ user.status ? 'Actif' : 'Bloqué' }}</td>
            </tr>
            <tr>
              <th>Créer le</th>
              <td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
              <th>Dernière vue</th>
              <td>{{ user.lastConnection ?user.lastConnection|date('d-m-Y') ~ ' à ' ~ user.lastConnection|date('H:i:s') : 'Jamais connecté' }}</td>
            </tr>
            </tbody>
          </table>
        </div>
        <div class="col-12 col-sm-8 col-md-6 offset-md-3 offset-sm-2">
          {{ include('user/_delete_form.html.twig', {label: 'Supprimer'}) }}
          <a class="btn btn-primary float-right" href="{{ path('user_edit', {'id': user.id}) }}"><i
                    class="fas fa-edit"></i> Editer</a>
        </div>
      </div>
    </div>
    {#<div class="card-footer">
        Footer
    </div>#}
  </div>
{% endblock %}


