{% extends 'base-admin.html.twig' %}

{% block title %}Importateur{% endblock %}

{% block page_title %}Importateur {% endblock %}
{% block page_subtitle %}{{ importer.name }} {{ importer.lastName }}{% endblock %}

{% block page_content %}
  <div class="row pb1em">
    <div class="col-12 col-sm-12 col-md-12">
      <a class="btn btn-default" href="{{ path('importer_index') }}"><i class="fas fa-reply"></i> Mes Importateurs</a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="nav-tabs-custom">
        <!-- Tabs within a box -->
        <ul class="nav nav-tabs pull-right ui-sortable-handle nav-title">
          <li class="pull-left header"><i class="fas fa-plus-circle"></i> Ajout d'Importateur</li>
        </ul>
        <div class="tab-content">
          <div class="row">
            <div class="col-12 col-sm-8 col-md-6 col-md-offset-3 col-sm-offset-2">
              <table class="table">
                <tbody>
                <tr>
                  <th>Prénom</th>
                  <td>{{ importer.name }}</td>
                </tr>
                <tr>
                  <th>Nom</th>
                  <td>{{ importer.lastName }}</td>
                </tr>
                <tr>
                  <th>N° Téléphone</th>
                  <td>{{ importer.phone ? importer.phone : '-' }}</td>
                </tr>
                <tr>
                  <th>E-mail</th>
                  <td>{{ importer.email ? importer.email : '-' }}</td>
                </tr>
                <tr>
                  <th>Adresse</th>
                  <td>{{ importer.address ? importer.address : '-' }}</td>
                </tr>
                <tr>
                  <th>Créer le</th>
                  <td>{{ importer.createdAt ? importer.createdAt|date('Y-m-d H:i:s') : '-' }}</td>
                </tr>
                </tbody>
              </table>
            </div>
            <div class="col-12 col-sm-8 col-md-6 col-md-offset-3 col-sm-offset-2">
              {{ include('importer/_delete_form.html.twig', {label: 'Supprimer'}) }}
              <a class="btn btn-primary pull-right" href="{{ path('importer_edit', {'id': importer.id}) }}"><i class="fas fa-edit"></i> Editer</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

