<form method="post" style="display: inline" action="{{ path('transfer_delete', {'id': transfer.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler la demande de transfert ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transfer.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i> {{ label|default('') }}</button>
</form>
