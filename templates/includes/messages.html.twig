{#Affichage des messages#}
{% for message in app.session.flashbag.get('warning') %}
  <input type="hidden" class="alert" data-type="warning" value="{{ message|raw }}">
{% endfor %}
{% for message in app.session.flashbag.get('success') %}
  <input type="hidden" class="alert" data-type="success" value="{{ message|raw }}">
{% endfor %}
{% for message in app.session.flashbag.get('danger') %}
  <input type="hidden" class="alert" data-type="danger" value="{{ message|raw }}">
{% endfor %}
{# //Les messages#}