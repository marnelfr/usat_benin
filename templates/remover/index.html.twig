{% extends 'base-admin.html.twig' %}

{% block title %}Liste des Enleveurs{% endblock %}

{% block page_title %}Enleveur{% endblock %}
{% block page_title2 %}Enleveur{% endblock %}
{% block page_subtitle %}Liste{% endblock %}

{% block page_content %}
    <div class="row pb-3">
        <div class="col-12 col-sm-12 col-md-12">
            <a class="btn btn-default" href="{{ path('remover_new') }}"><i class="fas fa-plus-circle"></i> Nouveau Enleveur</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list"></i> Liste des Enleveurs</h3>
          {#<div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                  <i class="fas fa-minus"></i></button>
              <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                  <i class="fas fa-times"></i></button>
          </div>#}
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12">
                    <table class="table table-responsive-sm">
                        <thead>
                        <tr>
                            <th>&ensp;Nom</th>
                            <th class="text-center">N° Téléphone</th>
                            <th class="text-center">E-mail</th>
                            <th class="text-right">Actions&ensp;</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for remover in removers %}
                            <tr>
                                <td>{{ remover.fullname }}</td>
                                <td class="text-center">{{ remover.phone }}</td>
                                <td class="text-center">{{ remover.email }}</td>
                                <td class="text-right">
                                    <a class="btn btn-primary" title="Afficher toutes les informations" href="{{ path('remover_show', {'id': remover.id}) }}"><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-primary" title="Editer les informations" href="{{ path('remover_edit', {'id': remover.id}) }}"><i class="fas fa-edit"></i></a>
                                    {{ include('remover/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun enleveur trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>&ensp;Nom</th>
                            <th class="text-center">N° Téléphone</th>
                            <th class="text-center">E-mail</th>
                            <th class="text-right">Actions&ensp;</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
      {#<div class="card-footer">
          Footer
      </div>#}
    </div>
{% endblock %}
